{
    "name": "Python Dev Container",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {
        "ghcr.io/devcontainers/features/azure-cli:1": {
            "version": "latest",
            "installUsingPython": "true"
        },
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/terraform:1": {},
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "postCreateCommand": "git config --global core.eol lf && git config --global core.autocrlf input && git config --global user.name 'bot' && git config --global user.email 'bot-databricks@datamlops.com' && rm .git/hooks/pre-commit && rm .git/hooks/post-commit && curl -fsSL https://raw.githubusercontent.com/databricks/setup-cli/main/install.sh | sudo sh && databricks -v",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "hashicorp.terraform",
                "Meezilla.json",
                "samuelcolvin.jinjahtml",
                "redhat.vscode-yaml",
                "hediet.vscode-drawio",
                "ms-azuretools.vscode-azureresourcegroups",
                "databricks.databricks"
            ]
        }
    }
}
